<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/SignUpSuccUnivName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="성신여자대학교"
        android:textColor="#000000"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/SignUpSuccAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="#FFFFFF"
        android:text="UnivPlanner"
        android:textColor="#000000"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/SignUpSuccCongratText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="user님,\n가입을 축하드립니다"
        android:textColor="#000000"
        android:textSize="35dp" />

    <Button
        android:id="@+id/SignUpSuccStartButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="시작하기"
        android:textSize="15dp"
        android:textStyle="bold"
        app:backgroundTint="@color/purple_200" />


</LinearLayout>

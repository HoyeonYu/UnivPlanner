<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="설정">
        <PreferenceScreen
            android:title="프로필">
            <intent android:targetPackage="edu.sungshin.univplanner"
                android:targetClass="edu.sungshin.univplanner.ProfileActivity"/>
        </PreferenceScreen>

        <PreferenceScreen
            android:title="비밀번호 변경">
            <intent android:targetPackage="edu.sungshin.univplanner"
                android:targetClass="edu.sungshin.univplanner.PasswordChangeActivity"/>
        </PreferenceScreen>

        <PreferenceScreen
            android:key="optional_subject"
            android:title="과목 선택">
            <PreferenceScreen
                android:title="과목 선택"
                android:summary="선택한 과목들만 알림을 받을 수 있습니다."/>

            <CheckBoxPreference
                android:defaultValue="false"
                android:key="check_box_preference_1"
                android:title="객지설" />
            <CheckBoxPreference
                android:defaultValue="false"
                android:key="check_box_preference_2"
                android:title="스모프" />
            <CheckBoxPreference
                android:defaultValue="false"
                android:key="check_box_preference_3"
                android:title="알고리즘" />

        </PreferenceScreen>

        <SwitchPreference
            android:key="alarm"
            android:title="알림 설정"/>

        <PreferenceScreen
            android:title="앱버전"
            android:summary="v.1.0.0">
        </PreferenceScreen>

        <PreferenceScreen
            android:title="문의하기">
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>
